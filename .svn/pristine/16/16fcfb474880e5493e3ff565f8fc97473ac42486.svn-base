function checkMoneyFormat(val){
    var reg = /^(([1-9]\d*)|(([1-9][0-9]*\.[0-9]{1,2})|([0]\.[0-9]{1,2})))$/;
    var isMoneyFormatRight = reg.test(val);
    return isMoneyFormatRight;
}